@using AshHillCreations.UI.Features.Shared
@using AshHillCreations.UI.Theme
@inherits LayoutComponentBase

<MudThemeProvider Theme="AshHillCreationsThemes.MudTheme"/>
<MudPopoverProvider/>
<MudDialogProvider/>
<MudSnackbarProvider/>

<PageTitle>Ash Hill Creations, LLC</PageTitle>

<MudContainer MaxWidth="MaxWidth.False">
    <MudLayout Class="d-flex flex-column">
        <MudMainContent Class="flex-auto">
            <MudGrid>
                <MudItem xs="12">
                    <AppBarComponent/>
                </MudItem>
                <MudItem xs="12">
                    @Body
                </MudItem>
            </MudGrid>
        </MudMainContent>
    </MudLayout>
</MudContainer>