@using AshHillCreations.UI.Constants
@inherits AshHillCreations.UI.Components.AshHillCreationsComponentBase

<MudAppBar Color="Color.Primary"
           WrapContent="true">
    <MudStack Row="true">
        <MudImage Src="Images/Branding/company-logo.png"/>

        <MudPaper Width="250px" Class="py-3" Elevation="0">
            <MudNavMenu>
                <MudNavLink OnClick="@(_ => NavigationManager.NavigateTo(PageNavigation.Home))">
                    Home
                </MudNavLink>
                <MudNavLink OnClick="@(_ => NavigationManager.NavigateTo(PageNavigation.Shop))">
                    Shop
                </MudNavLink>
                <MudNavLink OnClick="@(_ => NavigationManager.NavigateTo(PageNavigation.ContactUs))">
                    Contact Us
                </MudNavLink>
                <MudNavLink OnClick="@(_ => NavigationManager.NavigateTo(PageNavigation.About))">
                    About
                </MudNavLink>
            </MudNavMenu>
        </MudPaper>

    </MudStack>
</MudAppBar>